<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/details_screen_padding">

    <TextView
        android:id="@+id/store_details_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/details_item_padding"
        android:paddingBottom="@dimen/details_item_padding"
        android:textSize="@dimen/detail_text_size_title"/>

    <LinearLayout
        android:id="@+id/store_details_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/details_item_padding"
        android:paddingBottom="@dimen/details_item_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_details_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/detail_text_size_item"/>

        <ImageView
            android:id="@+id/store_details_map_icon"
            android:layout_width="@dimen/details_icon_size"
            android:layout_height="@dimen/details_icon_size"
            android:layout_marginLeft="10dp"
            android:src="@drawable/map"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/store_details_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/details_item_padding"
        android:paddingBottom="@dimen/details_item_padding"
        android:textSize="@dimen/detail_text_size_item"/>

    <LinearLayout
        android:id="@+id/store_details_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/details_item_padding"
        android:paddingBottom="@dimen/details_item_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/store_details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/detail_text_size_item"/>

        <ImageView
            android:id="@+id/store_details_call_icon"
            android:layout_width="@dimen/details_icon_size"
            android:layout_height="@dimen/details_icon_size"
            android:layout_marginLeft="10dp"
            android:src="@drawable/call"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:id="@+id/store_details_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/details_item_padding"
        android:paddingBottom="@dimen/details_item_padding"
        android:textSize="@dimen/detail_text_size_item"
        android:textColor="#0645AD"/>

</LinearLayout>